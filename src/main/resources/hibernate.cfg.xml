<!DOCTYPE hibernate-configuration PUBLIC 
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/example</property>   
    <property name="connection.username">root</property>
    <property name="connection.password">letmeinit</property>
    <property name="connection.pool_size">1</property>
    <property name= "cache.provider_class">
        org.hibernate.cache.NoCacheProvider
    </property>
      <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
      <property name="show_sql">true</property>
      <property name="hbm2ddl.auto">validate</property>
      <property name="current_session_context_class">thread</property>
      <mapping class="ua.pogodin.webapp.domain.User" />
      <mapping class="ua.pogodin.webapp.domain.Bus" />
      <mapping class="ua.pogodin.webapp.domain.Trip" />
      <mapping class="ua.pogodin.webapp.domain.Driver" />
      <mapping class="ua.pogodin.webapp.domain.BusApplication" />
  </session-factory>
</hibernate-configuration>